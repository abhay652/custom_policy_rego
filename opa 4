curl -H 'Authorization: Bearer U47BzANF8I2VPGQEwkF3JI9fD6PjAqpBajqjpO6-C4rIQydMdwjys4HvaWu7bk9icpcNOLRZXRSvfiOkX8Jlz4GUVwiCqlg' -o opa-conf.yaml 'https://x8gy40.svc.styra.com/v1/systems/e001ce5b0b694f78ba73cc6fc1b2aaeb/assets/opa-config'
